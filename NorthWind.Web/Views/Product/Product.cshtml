
@using NorthWind.Core.Entity;
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers;
@model Product;
@{
    ViewData["Title"] = "Product List";
    var productlist = ViewData["productlist"] as List<Product>;
}
       
    <div class="app-main flex-column flex-row-fluid m-0" id="kt_app_main">
            <!--begin::Content wrapper-->
        <div class="d-flex flex-column flex-column-fluid">
            <div id="grid" style="margin-left:50px">
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Product" id="Create">Create</button>          
            <div class="modal fade" id="Product" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="kt_modal_add_order_form"
                                class="form fv-plugins-bootstrap5 fv-plugins-framework mb-10px" method="post"
                                enctype="multipart/form-data">
                                <div>
                                    
                                    <!--begin::Label-->
                                    <label class="required fw-semibold fs-6 mb-2">ProductName </label>
                                    <input type="text" class="form-control " id="productName">
                                    <!--end::Input-->
                                </div>
                                <div class="">
                                    <!--begin::Label-->
                                    <label class="required fw-semibold fs-6 mb-2">SupplierID </label>
                                    <!--end::Label-->
                                    <!--begin::Input-->
                                    <input type="text" class="form-control" id="supplierID">
                                    <!--end::Input-->
                                </div>
                                <div>
                                    <!--begin::Label-->
                                    <label class="required fw-semibold fs-6 mb-2">CategoryID</label>
                                    <!--end::Label-->
                                    <input type="text" class="form-control" id="categoryID">
                                    <!--begin::Input-->
                                </div>
                                <div>
                                    <!--begin::Label-->
                                    <label class="required fw-semibold fs-6 mb-2">QuantityPerUnit</label>
                                    <!--end::Label-->
                                    <input type="text" class="form-control" id="quantityPerUnit">
                                    <!--begin::Input-->
                                </div>
                                <div>
                                    <!--begin::Label-->
                                    <label class="required fw-semibold fs-6 mb-2">UnitPrice</label>
                                    <!--end::Label-->
                                    <input type="text"  class="form-control" id="unitPrice">
                                    <!--begin::Input-->
                                </div>
                                <div>
                                    <!--begin::Label-->
                                    <label class="required fw-semibold fs-6 mb-2">UnitsInStock</label>
                                    <!--end::Label-->

                                    <!--begin::Input-->
                                    <input type="text" class="form-control" id="unitsInStock">
                                    <!--end::Input-->
                                </div>
                                <div>
                                    <!--begin::Label-->
                                    <label class="required fw-semibold fs-6 mb-2">UnitsOnOrder</label>
                                    <!--end::Label-->

                                    <!--begin::Input-->
                                    <input type="text" class="form-control" id="unitsOnOrder">
                                    <!--end::Input-->
                                </div>
                                <div>
                                    <label class="required fw-semibold fs-6 mb-2">ShipName</label>
                                    <input type="text"  class="form-control" id="shipName">
                                    <br>
                                </div>
                                <div>
                                    <!--begin::Label-->
                                    <label class="required fw-semibold fs-6 mb-2">ReorderLevel </label>
                                    <!--end::Label-->
                                    <input type="text" class="form-control" id="reorderLevel">
                                    <!--begin::Input-->
                                </div>
                                <div>
                                    <!--begin::Label-->
                                    <label class="required fw-semibold fs-6 mb-2">Discontinued</label>
                                    <!--end::Label-->
                                    <br>

                                    <!--begin::Input-->
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="discontinued">
                                    <!--end::Input-->
                                </div>
                                <hr>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="sumbit" class="btn btn-primary" id="btnCreateProduct">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            </div> 


        </div>
    
<!--end::Content-->	
                                
<!--end::Content wrapper-->
 @Html.Partial("_Footer")
<!--end::Footer-->                            

@section Scripts
{
    <script src="/js/page/product.js" type="module"></script>
}    
            
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
           
        

                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
           
        
